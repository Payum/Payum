{
    "name": "payum/payex",
    "type": "library",
    "description": "The Payum extension. It provides Payex payment integration.",
    "keywords": ["payment", "payex"],
    "homepage": "https://payum.forma-pro.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Kotlyar Maksim",
            "email": "kotlyar.maksim@gmail.com"
        },
        {
            "name":     "Payum project",
            "homepage": "https://payum.forma-pro.com/"
        },
        {
            "name":     "Community contributions",
            "homepage": "https://github.com/Payum/Payex/contributors"
        }
    ],
    "require": {
        "payum/core": "2.0.x-dev",
        "ext-soap": "*"
    },
    "require-dev": {
        "ext-curl": "*",
        "ext-pdo_sqlite": "*",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^6.0",
        "php-http/guzzle7-adapter": "^1.1.1"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": { "Payum\\Payex": "" }
    },
    "target-dir": "Payum/Payex",
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
