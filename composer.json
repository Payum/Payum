{
    "name": "payum/omnipay-bridge",
    "type": "library",
    "description": "This bridge allows you to use omnipay gateways but in payum like way.",
    "keywords": ["payment", "omnipay"],
    "homepage": "https://github.com/Payum/OmnipayBridge",
    "license": "MIT",
    "authors": [
        {
            "name": "Kotlyar Maksim",
            "email": "kotlyar.maksim@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "payum/payum": "0.6.x-dev",
        "omnipay/omnipay": "1.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": { "Payum\\Bridge\\Omnipay": "src/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.6-dev"
        }
    }
}
